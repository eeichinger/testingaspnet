<?xml version="1.0" ?>
<project xmlns="http://nant.sf.net/schemas/nant.xsd"
         name="NUnitAspEx.Tests" default="build">

    <!--
        Required properties:
            * current.bin.dir           - (path) root level to build to
            * current.build.defines.csc - framework-specific build defines
            * current.build.debug               - (true|false) debug build?
    -->
    <include buildfile="${logging.basedir}/shared/common-project.include" verbose="true" />

    <target name="build">
        <!-- compile everything -->
        <csc target="library" define="${current.build.defines.csc}"
             warnaserror="true"
             optimize="${build.optimize}"
             debug="${current.build.debug}"
             output="${current.bin.dir}/${project::get-name()}.dll"
             doc="${current.bin.dir}/${project::get-name()}.xml">
            <nowarn>
                <warning number="${nowarn.numbers.test}" />
            </nowarn>
            <sources failonempty="true">
                <include name="**/*.cs" />
                <include name="../CommonAssemblyInfo.cs" />
            </sources>
            <references basedir="${current.bin.dir}">
                <include name="*.dll" />
                <exclude name="${project::get-name()}.dll" />
            </references>
        </csc>

        <!-- copy app.config -->
        <copy file="${project::get-base-directory()}/app.config"
              tofile="${current.bin.dir}/${project::get-name()}.dll.config"/>

        <!-- copy 'TestData' directory -->
        <copy todir="${current.bin.dir}/TestData">
          <fileset basedir="${project::get-base-directory()}/TestData">
            <include name="**/*.*"/>
          </fileset>
        </copy>
    </target>

    <target name="test" depends="build">
        <property name="project.name" value="${project::get-name()}" overwrite="true" />
        <call target="common.run-tests" />
    </target>

</project>
